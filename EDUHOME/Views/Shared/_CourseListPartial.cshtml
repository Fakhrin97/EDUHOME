@model List<Course>

<ul>
    @foreach (var item in Model)
    {
        <li>
            <a asp-action="Details" asp-route-id="@item?.Id">
                <img style="width:150px;height:50px" src="~/assets/images/course/@item?.ImageUrl" />
                <span style="font-weight:bold">@item?.Name</span>
            </a>
        </li>
    }
</ul>
